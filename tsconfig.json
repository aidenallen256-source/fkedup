{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "moduleResolution": "nodenext", // Changed from "node" to "nodenext"
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true // Optional: Enables stricter type checking for better safety
  },
  "include": ["src", "tailwind.config.ts"],
  "exclude": ["node_modules"]
}